resource "aws_iam_role" "dummy_service_role" {
  name = "${var.environment}-dummy-service-role"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = "sts:AssumeRole"
        Effect = "Allow"
        Principal = {
          Service = "eks.amazonaws.com"
        }
      },
    ]
  })
}

resource "aws_iam_policy" "dummy_service_policy" {
  name = "${var.environment}-dummy-service-policy"

  policy = jsonencode({
    Version = "2012-10-17",
    Statement = [
      {
        Action   = "s3:PutObject",
        Effect   = "Allow",
        Resource = "arn:aws:s3:::${var.bucket_name}/*"
      }
    ]
  })
}

resource "aws_iam_role_policy_attachment" "dummy_service_policy_attachment" {
  role       = aws_iam_role.dummy_service_role.name
  policy_arn = aws_iam_policy.dummy_service_policy.arn
}

